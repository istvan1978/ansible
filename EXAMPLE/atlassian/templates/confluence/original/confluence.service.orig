[Unit]
Description=Confluence Service
After=network.target postgresql.service jira.service

[Service]
Type=forking
User=root
Environment=JRE_HOME=/export/java/jdk
ExecStart=/export/confluence/confluence/bin/start-confluence.sh
ExecStop=/export/confluence/confluence/bin/stop-confluence.sh
ExecReload=/export/confluence/confluence/bin/stop-confluence.sh | sleep 60 | /export/confluence/confluence/bin/start-confluence.sh
[Install]

WantedBy=multi-user.target
